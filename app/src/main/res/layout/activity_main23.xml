<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    tools:context="onroute.onroute.com.onroute.Main23Activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#1d1d1d">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="#202020">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="0.6"
                android:background="@drawable/djjj"
                android:layout_margin="5dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Resume"
                    android:id="@+id/button"
                    android:layout_margin="3dp"
                    android:background="@drawable/djjj" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView2"
                android:layout_marginTop="90dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                app:cardCornerRadius="5dp"

                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"

                        android:background="@drawable/djj">

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:id="@+id/imageButton11"
                                android:onClick="FragmentOneClick" />





                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:id="@+id/imageView8"
                                android:src="@drawable/net"
                                android:scaleType="fitXY"
                                android:background="@drawable/djj" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="30dp"

                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:alpha="0.6" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="English shows"
                                    android:id="@+id/textView11"
                                    android:background="#00000000"
                                    android:textColor="#ffffff"
                                    android:textAlignment="center"
                                    android:gravity="center"
                                    android:textSize="10dp" />
                            </RelativeLayout>

                    </RelativeLayout>


            </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        app:cardCornerRadius="5dp"

                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/djj">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/imageButton10"
                            android:onClick="FragmentTwoClick" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/imageView9"
                            android:src="@drawable/colors"
                            android:scaleType="fitXY"
                            android:background="@drawable/djj" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignBottom="@+id/imageButton10"
                            android:layout_alignStart="@+id/imageButton10">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:alpha="0.6" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Hindi shows"
                                android:id="@+id/textView10"
                                android:background="#00000000"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textSize="10dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        app:cardCornerRadius="5dp"

                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/djj">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/imageButton8"
                            android:onClick="FragmentOneClick" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/imageView10"
                            android:src="@drawable/tvf"
                            android:scaleType="fitXY"
                            android:background="@drawable/djj" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignBottom="@+id/imageButton8"
                            android:layout_alignStart="@+id/imageButton8">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:alpha="0.6" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="funny videos"
                                android:id="@+id/textView8"
                                android:background="#00000000"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textIsSelectable="false"
                                android:textSize="10dp" />
                        </RelativeLayout>
                    </RelativeLayout>
</android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        app:cardCornerRadius="5dp"

                        app:cardElevation="1dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:background="@drawable/djj">

                        <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/imageButton9"
                            android:onClick="FragmentTwoClick"
                            android:background="@drawable/djj" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:id="@+id/imageView11"
                            android:scaleType="fitXY"
                            android:src="@drawable/zm"
                            android:background="@drawable/djj" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_alignBottom="@+id/imageView11"
                            android:layout_alignEnd="@+id/imageButton9">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:alpha="0.6"></RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Regional"
                                android:id="@+id/textView7"
                                android:background="#00000000"
                                android:textColor="#ffffff"
                                android:textAlignment="center"
                                android:gravity="center"
                                android:textSize="10dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="#1D1D1D">


            <fragment
                android:id="@+id/fragment_switch"
                android:name="onroute.onroute.com.onroute.MyFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
